                </tr>
                <tr>
                    <td class="editor-label-bold">@Html.LabelFor(vm => vm.SuppliersModel.ContactTitle):</td>
                    <td class="editor-label">@Html.DisplayFor(vm => vm.SuppliersModel.ContactTitle)</td>
                </tr>
                <tr>
                    <td class="editor-label-bold">@Html.LabelFor(vm => vm.SuppliersModel.Address):</td>
